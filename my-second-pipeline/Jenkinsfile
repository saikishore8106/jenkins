pipeline {
    agent {
        docker {
            image 'node:16-alpine'
            args '-u root:root'
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                sh 'npm install'
            }
        }

        stage('Check Node Version') {
            steps {
                sh 'node --version'
            }
        }

        stage('Build') {
            steps {
                echo "Running build..."
                sh 'npm run build || echo "No build script defined"'
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
